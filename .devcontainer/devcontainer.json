{
  "name": "NeuroSense FX Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--ipc=host"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/dist,target=/workspaces/neurosensefx/dist,type=bind"
  ],
  "remoteUser": "node",
  "postCreateCommand": "npm install && ./scripts/setup_claude.sh"
}