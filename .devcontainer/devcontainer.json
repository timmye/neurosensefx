{
  "name": "NeuroSense FX Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/schlich/devcontainer-features/playwright:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "dbaeumer.vscode-eslint",
        "RooVeterinaryInc.roo-cline",
        "kilocode.kilo-code",
        "saoudrizwan.claude-dev",
        "ms-playwright.playwright"
      ]
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--ipc=host"
  ],
  "remoteUser": "node",
  "mcpServers": {
    "playwright-mcp": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp"]
    }
  },
  "postCreateCommand": "npm install && npx playwright install --with-deps && npm install -g @playwright/mcp && ./scripts/robust_mcp_setup.sh"
}